---
import BaseHead from "@/components/BaseHead.astro";
import Footer from "@/sections/Footer.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <BaseHead title={title} />
  <body
    class="dark:bg-[#0F172A] bg-white selection:bg-green-200 selection:text-black dark:selection:bg-green-200 dark:selection:text-black transition-colors duration-200 ease-in-out"
  >
    <div>
      <main>
        <slot />
      </main>
      <Footer />
    </div>
    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Jetbrains Mono", sans-serif;
        margin: 0;
        padding: 0;
        font-size: 16px;
        line-height: 1.5;
        scroll-behavior: smooth;
      }

      p {
        margin-bottom: 1.6rem;
      }
    </style>
  </body>
</html>
